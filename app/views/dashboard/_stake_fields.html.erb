<div class="nested-fields form-inline">
  <div class="form-group">
    <%= f.hidden_field :stakeholder_type %>
    <%= f.grouped_collection_select(:stakeholder_id, [["User", User.all], ["Organisation", Organisation.all]], :last, :first, :id, :name, { prompt: 'Select User' }, {  data: {'live-search': true}, class: 'selectpicker' } ) %>
  </div>
  <div class="form-group label-floating">
    <%= f.label :percentage, class: "control-label" %>
    <%= f.text_field :percentage,  class: 'form-control'%>
  </div>
  <%= link_to_remove_association raw('<i class="material-icons">delete</i>'), f, class: "btn btn-primary btn-just-icon"%>
</div>
