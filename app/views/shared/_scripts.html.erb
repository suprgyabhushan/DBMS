<script src="/js/bootstrap-select.min.js" type="text/javascript"></script>
<script>
$(document).ready(function(){
  $('select').on('change', function(){
      if(this.value === "Student"){
        $("#student_val").show();
        $("#faculty_val").hide();
        $("#collaborator_val").hide();
      }else if(this.value === "Faculty"){
        $("#student_val").hide();
        $("#faculty_val").show();
        $("#collaborator_val").hide();
      }else if(this.value === "Collaborator"){
        $("#student_val").hide();
        $("#faculty_val").hide();
        $("#collaborator_val").show();
      }else{
        $("#student_val").hide();
        $("#faculty_val").hide();
        $("#collaborator_val").hide();
      }
  });
  $('a.add_fields').click(function(e, insertedItem){
    setTimeout(function() {
      $('select').selectpicker('refresh');
    }, 100);
    });

    $('#stakes').on('change', 'select', function(e){
      var select = e.target;
      var user_type = $(select.options[select.selectedIndex]).closest('optgroup').prop('label');
      $(select).parent().parent().find('input[type=hidden]').val(user_type);
    })
});
</script>
